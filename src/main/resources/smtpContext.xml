<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="passwordAuth" class="javax.mail.PasswordAuthentication">
        <constructor-arg value="${application.email_sender}" />
        <constructor-arg value="${application.email_password}" />
    </bean>

    <bean id="authenticator" class="javax.mail.Authenticator">
        <lookup-method name="getPasswordAuthentication" bean="passwordAuth" />
    </bean>

    <bean id="emailSession" class="javax.mail.Session">
        <constructor-arg>
            <props>
                <prop key="mail.smtp.auth">true</prop>
                <prop key="mail.smtp.starttls.enable">true</prop>
                <prop key="mail.smtp.host">${application.email_host}</prop>
                <prop key="mail.smtp.socketFactory.port">${application.email_port}</prop>
                <prop key="mail.smtp.socketFactory.class">javax.net.ssl.SSLSocketFactory</prop>
                <prop key="mail.smtp.port">${application.email_port}</prop>
            </props>
        </constructor-arg>
        <constructor-arg ref="authenticator" />
    </bean>

</beans>